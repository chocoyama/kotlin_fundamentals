<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.kotlin_fundamental">

    <application
        android:name=".KotlinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="activity.GuessTheWorldActivity"></activity>
        <activity android:name="activity.DessertClickerActivity"></activity>
        <activity android:name="activity.TriviaActivity" />
        <activity android:name="activity.ColorMyViewsActivity" />
        <activity android:name="activity.AboutMeActivity" />
        <activity android:name="activity.DiceActivity" />
        <activity android:name="activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>